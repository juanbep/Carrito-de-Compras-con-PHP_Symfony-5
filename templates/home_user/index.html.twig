{% extends 'baseHomeUser.html.twig' %}

{% block title %}Tienda{% endblock %}

{% block body %}
  
     <div class="container">
        <br>
        {% for flash_message in app.session.flashBag.get('success') %}
             <div class="alert alert-success">
                 {{ flash_message }}
                 <a href="{{ path('view_cart')}}" class="badge badge-success">ver carrito</a>
             </div>
         {% endfor %}

        <div class="row">
            {% if articles %}
         
                {%  for article in articles %}
                    <div class ="col-3">
                            <div class ="card">
                               <img
                                title="{{article.name}}"
                                alt="Titulo" 
                                class="card-img-top" 
                                src="{{article.imagen}}" 
                                data-toggle="popover"
                                data-trigger="hover"
                                data-content="{{article.descripcion}}"
                                height ="280px"
                                >
                                
                                <div class="card-body">
                        
                                    <span>{{article.name}}</span>
                                    <h5 class="card-title">${{article.precio | number_format(2)}}</h5>
                                    <div class="input-group mb-3">
                                        Cantidad:&nbsp;
                                        <input type="number" id="qty_input" class="form-control form-control-sm"   value="1" min="1" max="{{ article.cantidad }}">
                                    </div>
                                    <a href="{{ path('add_product', {'id' : article.id})  }}" class="btn btn-primary col-md-12 text-center">Agregar al Carrito</a>
                                </div>
                          </div>
                                 
                    <br>
                    </div>
                {% endfor %}   
            {% else %}
                <p>No hay art√≠culos</p>
            {% endif %}
        </div>
    </div>    
    <script>
            $(function () {
            $('[data-toggle="popover"]').popover()
            })
    </script>
{% endblock %}
